{{!-- header --}}

    <link rel="stylesheet" href="/header.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <div class="header">

        <div class="options">
            {{#if (empty user) }}
            <button onclick="window.open('/login', '_self')">Login</button>
            {{else}}
            <div class="dropdown">
            
                <button class="dropbtn">
                    <i class="fa fa-bars"></i>
                </button>
                    <div class="dropdown-content" style="left: 0;">
                        <a href="/home">Home</a>
                        <a href="/order">Order</a>
                        <a href="/">Marketplace</a>
                </div>
            </div>
            <div class="dropdown">
            
                <button class="dropbtn">
                    <i class="fa fa-user-circle"></i> <%=user.name%>
                </button>
                    <div class="dropdown-content" style="right: 0;">
                        <a href="#"><%=user.email%></a>
                        <a href="#"><small><%=new Date(user.lastLogin).toLocaleString("en-US", { dateStyle: "short", timeStyle: "short", timeZone: "America/Sao_Paulo" })%></small></a>
                        <a href="#" onclick="window.open('/logout', '_self')">Logout</a>
                </div>
            </div>
            {{/if}}
            <div class="dropdown">
                
                <button class="dropbtn">
                    <i class="fa fa-shopping-cart"></i>
                </button>
                    <div class="dropdown-content" style="right: 0;">
                    {{#each groupedCart}}
                        <a href="#">
                            <b>{{this}}</b><br>x{{!--groupedCart[this]--}}
                        </a>
                    {{/each}}
                    <a href="#" onclick="window.open('/pedido', '_self')">Fazer pedido</a>
                </div>
            </div>
        
        </div>

    </div>

    {{!-- .header --}}